{
    "builders": [
        {
            "type": "vmware-iso",
            "vm_name": "windows_7",
            "iso_url": "http://roecloudsrv001.sealsystems.local/windows/win7sp1_enterprise_en/x64/en_windows_7_enterprise_with_sp1_x64_dvd_u_677651.iso",
            "iso_checksum_type": "sha1",
            "iso_checksum": "a491f985dccfb5863f31b728dddbedb2ff4df8d1",
            "headless": false,
            "boot_wait": "2m",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_wait_timeout": "4h",
            "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
            "guest_os_type": "windows7-64",
            "tools_upload_flavor": "windows",
            "disk_size": 61440,
            "vnc_port_min": 5900,
            "vnc_port_max": 5980,
            "floppy_files": [
                "./answer_files/7/Autounattend.xml",
                "./scripts/dis-updates.ps1",
                "./scripts/win-updates.ps1",
                "./scripts/vcloud/openssh.ps1"
            ],
            "vmx_data": {
                "RemoteDisplay.vnc.enabled": "false",
                "RemoteDisplay.vnc.port": "5900",
                "memsize": "2048",
                "numvcpus": "2",
                "scsi0.virtualDev": "lsisas1068",
                "svga.autodetect": "FALSE",
                "svga.vramSize": "20971520",
                "svga.maxWidth": "2560",
                "svga.maxHeight": "2048"
            },
            "vmx_data_post": {
                "ethernet0.virtualDev": "vmxnet3"
            }
        } 
    ],
    "provisioners": [
        {
            "type": "shell",
            "remote_path": "/tmp/script.bat",
            "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
            "scripts": [
                "./scripts/vm-guest-tools.bat",
                "./scripts/enable-remote-desktop.bat",
                "./scripts/enable-winrm.bat",
                "./scripts/vagrant-ssh.bat"
            ]
        }, 
        {
            "type": "shell", "inline": ["rm -rf /tmp/*"]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant-vmware-ovf",
            "provider": "vcloud",
            "output": "windows_7_{{.Provider}}.box",
            "vagrantfile_template": "vagrantfile-windows_7.template"
        }
    ]
}
